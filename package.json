{
  "name": "toddler-learning-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "api": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api",
    "swagger:generate": "swagger-jsdoc -d swagger.config.js server/routes/*.js -o swagger.json",
    "swagger:serve": "swagger-ui-serve swagger.json"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "@vueuse/core": "^10.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.5",
    "idb": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pinia": "^2.1.7",
    "sharp": "^0.34.3",
    "uuid": "^9.0.1",
    "vue": "^3.4.38",
    "vue-i18n": "^11.1.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^30.0.5",
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vue-tsc": "^2.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/uploads/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
