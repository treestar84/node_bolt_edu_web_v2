{
  "name": "toddler-learning-app-tests",
  "version": "1.0.0",
  "description": "Test environment for TDD development",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api",
    "test:e2e": "jest --testPathPattern=e2e",
    "swagger:generate": "swagger-jsdoc -d swagger.config.js server/routes/*.js -o swagger.json",
    "swagger:serve": "swagger-ui-serve swagger.json",
    "api:docs": "node scripts/generate-swagger.js && http-server swagger-ui -p 3001"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/uploads/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}